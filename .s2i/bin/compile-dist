#!/bin/bash -e

echo "---> Building static assets..."

NPM_BIN=`npm bin`
SOURCES_PATH=`$NPM_BIN/ng config "projects.$($NPM_BIN/ng config defaultProject).architect.build.options.outputPath"`

npm run build
mv $SOURCE_PATH/* $SOURCES_PATH/..
rm -rf $SOURCE_PATH
ls -l $SOURCE_PATH/..


echo "---> Uploading source maps..."

